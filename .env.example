# Application Configuration
APP_NAME=SONA-AI-Assistant
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
STREAMLIT_PORT=8501

# AI Service API Keys
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
SERP_API_KEY=your_serp_api_key_here

# AI Model Configuration
SPEECH_TO_TEXT_MODEL=whisper  # Options: whisper, deepspeech
INTENT_DETECTION_MODEL=openai  # Options: openai, local_transformer
IMAGE_GENERATION_MODEL=gemini  # Options: gemini
WEB_SEARCH_MODEL=serp  # Options: serp

# Whisper Configuration
WHISPER_MODEL_SIZE=base  # Options: tiny, base, small, medium, large

# OpenAI Configuration
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=150
OPENAI_TEMPERATURE=0.7

# Gemini Configuration
GEMINI_MODEL=gemini-pro-vision

# Audio Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_FORMAT=wav

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_AUDIO_FORMATS=wav,mp3,m4a,flac

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL=3600  # 1 hour in seconds

# Image Generation Configuration
IMAGE_GENERATION_SERVICE=dalle
DALLE_QUALITY=hd
DALLE_STYLE=vivid
DALLE_SIZE=1024x1024
